{
  "manifest_version": 3,
  "name": "XCH ACH Limit Orders",
  "version": "1.0.0",
  "description": "Automated limit orders for XCH purchases on vault.chia.net",

  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "activeTab"
  ],

  "host_permissions": [
    "https://vault.chia.net/*"
  ],

  "background": {
    "scripts": ["src/background.js"],
    "service_worker": "src/background.js",
    "type": "module"
  },

  "content_scripts": [{
    "matches": ["https://vault.chia.net/buy-xch*"],
    "js": ["src/content.js"],
    "run_at": "document_idle"
  }],

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "XCH Limit Orders"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "xch-limit-orders@example.com",
      "strict_min_version": "109.0"
    }
  }
}
